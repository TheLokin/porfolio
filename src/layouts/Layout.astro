---
import "@fontsource-variable/sora"

import { ViewTransitions } from "astro:transitions"

import Separator from "@/components/Separator.astro"
import Footer from "@/sections/Footer.astro"
import Header from "@/sections/Header.astro"

const { title } = Astro.props

export const prerender = false
---

<!doctype html>
<html lang="es" dir="ltr" class="scroll-smooth motion-reduce:scroll-auto">
  <head>
    <meta charset="utf-8" />
    <title>{`Porfolio de Lokin - ${title}`}</title>
    <meta
      name="description"
      content="Contrata a Lokin para crear tu aplicación web o móvil. Especializado en crear aplicaciones únicas."
    />

    <link rel="canonical" href="https://thelokin.vercel.app" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#ddd" />
    <meta name="viewport" content="width=device-width" />

    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta
      name="keywords"
      content="porfolio, desarrollador, informático, página web, aplicación móvil, thelokin"
    />

    {
      /* Fix to avoid a bug formatting the code with Prettier */
      /* https://github.com/withastro/prettier-plugin-astro/issues/316 */
      () => <ViewTransitions />
    }
  </head>

  <body
    class:list={[
      "overflow-x-hidden bg-secondary",
      "typography-base font-sora text-primary antialiased",
      "selection:bg-primary selection:text-secondary",
    ]}
  >
    <Header />
    <slot />
    <Separator class="mx-auto max-w-6xl" />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scrollbar-gutter: stable;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply tracking-tight;
  }

  strong {
    @apply font-extrabold;
  }

  & :focus-visible {
    @apply outline outline-2 outline-offset-2 outline-primary;
  }

  ::-webkit-scrollbar {
    @apply w-2.5;
  }

  ::-webkit-scrollbar-thumb {
    @apply rounded-lg border-2 border-solid border-transparent bg-primary bg-clip-content;
  }
</style>
