---
import GitHubLink from "@/components/GitHubLink.astro"
import LinkedInLink from "@/components/LinkedInLink.astro"
import { getI18N } from "@/i18n"
import Logo from "@/images/logo.png"
import { Image } from "astro:assets"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="flex flex-col items-center justify-between md:flex-row-reverse">
  <Image src={Logo} alt={i18n.HERO.IMAGE_ALT} class="max-w-64" />
  <div class="flex flex-col gap-4 md:h-64">
    <div class="flex h-full items-center">
      <h1
        class="typography-5xl text-balance text-center md:text-start [&_strong]:font-extrabold"
        set:html={i18n.HERO.H1}
      />
    </div>
    <nav class="mt-auto">
      <ul class="flex justify-center gap-4 md:justify-start">
        <li>
          <LinkedInLink />
        </li>
        <li>
          <GitHubLink />
        </li>
      </ul>
    </nav>
  </div>
</section>
