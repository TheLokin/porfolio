---
import { Image } from "astro:assets"

import GitHubLink from "@/components/GitHubLink.astro"
import LinkedInLink from "@/components/LinkedInLink.astro"
---

<section class="flex flex-col items-center justify-between md:flex-row-reverse">
  <Image
    alt="Logo de Diego Ramil López."
    class="max-w-64"
    height={800}
    src="/images/logo.png"
    transition:name="logo"
    width={800}
  />
  <div class="flex flex-col gap-4 md:h-64">
    <div class="flex h-full items-center">
      <h1 class="typography-5xl text-balance text-center md:text-start [&_strong]:font-extrabold">
        Hola, soy <strong>Diego</strong>
        <br aria-hidden="true" />
        <strong>Desarrollador</strong>
        <strong>Frontend</strong>
        <br aria-hidden="true" />
        Ubicado en <strong>España</strong>.
      </h1>
    </div>
    <nav class="mt-auto">
      <ul class="flex justify-center gap-4 md:justify-start">
        <li>
          <LinkedInLink />
        </li>
        <li>
          <GitHubLink />
        </li>
      </ul>
    </nav>
  </div>
</section>
