---
import Code from "@/components/icons/Code.astro"
import MenuButton from "@/components/MenuButton.astro"
import Link from "@/components/ui/Link.astro"
import Separator from "@/components/ui/Separator.astro"
import Footer from "@/sections/Footer.astro"

const links = [
  {
    label: "Experiencia",
    href: "/#experience",
  },
  {
    label: "Proyectos",
    href: "/#proyects",
  },
  {
    label: "Educación",
    href: "/#education",
  },
  {
    label: "Sobre mí",
    href: "/#about",
  },
]
---

<header class="sticky top-0 z-50">
  {/* eslint-disable-next-line tailwindcss/no-custom-classname */}
  <div class="transition-scroll">
    <div class="mx-auto flex max-w-5xl items-center justify-between gap-4 p-4 md:px-14">
      <Link class="typography-lg inline-flex items-center gap-2 font-semibold" href="/">
        <Code class="size-8" />
        TheLokin
      </Link>
      <MenuButton aria-controls="menu" class="md:hidden" name="menu-button" open={false} />
      <nav class="hidden md:block">
        <ul class="flex gap-4">
          {
            links.map((link) => (
              <li>
                <Link class="typography-lg font-semibold" href={link.href} variant="underline">
                  {link.label}
                </Link>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </div>

  <div
    class:list={[
      "invisible fixed inset-0 overflow-y-auto bg-secondary px-2 opacity-0 scrollbar-hide md:hidden",
      "transition-[visibility,opacity] duration-300 ease-in-out motion-reduce:transition-none",
      "data-open:visible data-open:opacity-100",
    ]}
    data-state="closed"
    id="menu"
  >
    <div class="flex items-center justify-between px-2 py-4">
      <span class="typography-lg font-semibold uppercase">Menú</span>
      <MenuButton aria-controls="menu" name="menu-button" open={true} />
    </div>
    <Separator />
    <nav>
      <ul class="flex flex-col gap-6 py-6" id="menu-anchors">
        {
          links.map((link) => (
            <li class="flex justify-center">
              <Link class="typography-lg font-semibold" href={link.href}>
                {link.label}
              </Link>
            </li>
          ))
        }
      </ul>
    </nav>
    <Separator />
    <Footer />
  </div>
</header>

<style>
  .transition-scroll {
    animation: blur linear both;
    animation-timeline: scroll();
    animation-range-end: 1%;
  }

  @keyframes blur {
    to {
      @apply shadow-sm backdrop-blur;
    }
  }

  #menu {
    background: var(--color-secondary) url("/images/concrete.png");
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const menuButtons = document.getElementsByName("menu-button")
    const menuContent = document.getElementById("menu")
    const menuAnchors = document.querySelectorAll("#menu-anchors a")

    const toggleMenu = () => {
      menuButtons.forEach((menuButton) => {
        menuButton.setAttribute(
          "data-state",
          menuButton.dataset.state === "open" ? "closed" : "open",
        )
      })

      menuContent?.setAttribute(
        "data-state",
        menuContent.dataset.state === "open" ? "closed" : "open",
      )

      const accessibleElements = Array.from(
        menuContent?.querySelectorAll("button, a, input, textarea, select, details, [tabindex]") ||
          [],
      )

      Array.from(
        document.querySelectorAll("button, a, input, textarea, select, details, [tabindex]"),
      )
        .filter((element) => !accessibleElements.includes(element))
        .forEach((accessibleElement) => {
          if (accessibleElement.getAttribute("tabindex") === null) {
            accessibleElement.setAttribute("tabindex", "-1")
          } else {
            accessibleElement.removeAttribute("tabindex")
          }
        })

      document.body.classList.toggle("overflow-hidden")
      document.body.classList.toggle("md:overflow-auto")
    }

    menuButtons.forEach((menuButton) => menuButton.addEventListener("click", toggleMenu))
    menuAnchors.forEach((menuAnchor) => menuAnchor.addEventListener("click", toggleMenu))

    const adjustScrollbar = () => {
      menuContent?.style.setProperty(
        "margin-right",
        `${window.innerWidth - document.body.clientWidth}px`,
      )
    }

    adjustScrollbar()

    window.addEventListener("resize", adjustScrollbar, true)
  })
</script>
