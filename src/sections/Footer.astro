---
import Action from "@/components/Action.astro"
import Separator from "@/components/Separator.astro"
import GitHub from "@/icons/GitHub.astro"
import LinkedIn from "@/icons/LinkedIn.astro"

const socialLinks = [
  {
    href: "https://www.linkedin.com/in/diegoramil/",
    label: "LinkedIn de Diego, se abrirá en una nueva pestaña",
    icon: LinkedIn,
  },
  {
    href: "https://github.com/TheLokin",
    label: "GitHub de Diego, se abrirá en una nueva pestaña",
    icon: GitHub,
  },
]
---

<footer class="flex flex-col items-center justify-between gap-4 py-4 md:flex-row md:px-4">
  <span class="text-center">
    &copy;
    <span data-date>{new Date().getFullYear()}</span>
    TheLokin
    <span aria-hidden="true" class="hidden md:inline">|</span>
    <br aria-hidden="true" class="block md:hidden" />
    Diseñado y desarrollado con ❤️ y ☕.
  </span>
  <Separator class="md:hidden" />
  <nav>
    <ul class="flex gap-4">
      {
        socialLinks.map((link) => (
          <li class="size-8">
            <Action
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.label}
            >
              <link.icon />
            </Action>
          </li>
        ))
      }
    </ul>
  </nav>
</footer>

<script>
  document.addEventListener("astro:page-load", () => {
    const dataDate = document.querySelectorAll("[data-date]")

    dataDate.forEach((date) => {
      date.textContent = new Date().getFullYear().toString()
    })
  })
</script>
