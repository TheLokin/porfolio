---
import SectionContainer from "@/components/SectionContainer.astro"
import Timeline from "@/components/Timeline.astro"
import { getI18N } from "@/i18n"
import GraduationCap from "@/icons/phosphor/graduation-cap.svg"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const education = [
  {
    title: i18n.SECTION.EDUCATION.EXAMPLES[0].TITLE,
    subtitle: i18n.SECTION.EDUCATION.EXAMPLES[0].SUBTITLE,
    date: {
      from: new Date(2023, 8),
    },
  },
  {
    title: i18n.SECTION.EDUCATION.EXAMPLES[1].TITLE,
    subtitle: i18n.SECTION.EDUCATION.EXAMPLES[1].SUBTITLE,
    date: {
      from: new Date(2021, 8),
      to: new Date(2023, 8),
    },
  },
  {
    title: i18n.SECTION.EDUCATION.EXAMPLES[2].TITLE,
    subtitle: i18n.SECTION.EDUCATION.EXAMPLES[2].SUBTITLE,
    date: {
      from: new Date(2016, 8),
      to: new Date(2021, 8),
    },
  },
  {
    title: i18n.SECTION.EDUCATION.EXAMPLES[3].TITLE,
    subtitle: i18n.SECTION.EDUCATION.EXAMPLES[3].SUBTITLE,
    date: {
      from: new Date(2016, 8),
      to: new Date(2021, 8),
    },
  },
]
---

<SectionContainer id="education">
  <GraduationCap slot="icon" />
  <Fragment slot="title">{i18n.SECTION.EDUCATION.TITLE}</Fragment>
  <Timeline elements={education} />
</SectionContainer>
