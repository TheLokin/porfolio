{
  "env": {
    "es2022": true,
    "node": true,
    "browser": true
  },
  "extends": ["eslint-config-prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      },
      "extends": ["plugin:astro/recommended", "plugin:jsx-a11y/recommended"]
    },
    {
      "files": ["**/*.astro/*.js", "*.astro/*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
